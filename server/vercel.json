{
  "version": 2,
  "builds": [
    {
      "src": "pgServer.js",
      "use": "@vercel/node",
      "config": {
        "memory": 1024,
        "maxDuration": 10
      }
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://quizspark-smoky.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With, Accept" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/cors-test", "destination": "/pgServer.js" },
    { "source": "/login", "destination": "/pgServer.js" },
    { "source": "/(.*)", "destination": "/pgServer.js" }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  }
}

